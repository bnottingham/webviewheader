<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.github.bnottingham.webviewheader.widget.WebViewHeaderContainer
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:webViewHeaderHeight="@dimen/header_height_full">

        <LinearLayout
            android:id="@id/web_view_header_scrollable"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!--Trace busta busta!-->
            <FrameLayout
                android:id="@id/web_view_header_header"
                android:layout_width="match_parent"
                android:layout_height="@dimen/header_height_full" />

            <com.github.bnottingham.webviewheader.widget.WebViewHeader
                android:id="@id/web_view_header"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

        <FrameLayout
            android:id="@id/web_view_header_content_size_placeholder"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </com.github.bnottingham.webviewheader.widget.WebViewHeaderContainer>
</FrameLayout>
